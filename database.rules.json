// Realtime Database rules (paste into Firebase Console > Realtime Database > Rules)
{
  "rules": {
    "messages": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["timestamp"]
    },
    "users_meta": {
      "$uid": {
        ".read": "auth != null && (auth.uid === $uid || root.child('admins').child(auth.uid).val() === true)",
        ".write": "auth != null && auth.uid === $uid",
        ".validate": "newData.hasChildren(['email','passwordHash','ip','lastLogin'])",
        "email": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "passwordHash": {
          ".validate": "newData.isString() && newData.val().length === 64"
        },
        "ip": {
          ".validate": "newData.isString()"
        },
        "lastLogin": {
          ".validate": "newData.isNumber()"
        }
      }
    },
    "admins": {
      ".read": "auth != null && root.child('admins').child(auth.uid).val() === true",
      ".write": "false"
    }
  }
}